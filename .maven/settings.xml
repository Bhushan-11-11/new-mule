<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 
                              https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <pluginGroups>
    <pluginGroup>org.mule.tools</pluginGroup>
    <pluginGroup>org.mule.tools.maven</pluginGroup>
  </pluginGroups>

  <servers>
  <server>
    <id>mule-ee-releases</id>
    <username>${env.CONNECTED_APP_CLIENT_ID}</username>
    <password>${env.CONNECTED_APP_CLIENT_SECRET}</password>
  </server>
</servers>

  <profiles>
    <profile>
      <id>mule-repositories</id>
      <pluginRepositories>
        <pluginRepository>
          <id>mule-releases</id>
          <url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
        </pluginRepository>
        <pluginRepository>
          <id>mule-snapshots</id>
          <url>https://repository.mulesoft.org/nexus/content/repositories/snapshots/</url>
        </pluginRepository>
        <pluginRepository>
          <id>mule-ee-releases</id>
          <url>https://repository.mulesoft.org/nexus-ee/content/repositories/releases-ee/</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>mule-repositories</activeProfile>
  </activeProfiles>
<mirrors>
    <mirror>
      <id>mule-mirror</id>
      <mirrorOf>*</mirrorOf>
      <url>https://repository.mulesoft.org/nexus-ee/content/repositories/releases-ee/</url>
    </mirror>
  </mirrors>
</settings>
